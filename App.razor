<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <!-- When a matching route is found, render it with MainLayout -->
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <!-- Automatically focus the h1 element for accessibility -->
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <!-- 404 page shown when no route matches -->
        <PageTitle>Page Not Found - EventEase</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center py-5">
                        <i class="bi bi-compass display-1 text-muted mb-4"></i>
                        <h1 class="display-4 mb-3">Page Not Found</h1>
                        <p class="lead text-muted mb-4">
                            Sorry, we couldn't find the page you're looking for. 
                            It might have been moved, deleted, or you entered the wrong URL.
                        </p>
                        <div class="d-flex gap-3 justify-content-center">
                            <a href="/" class="btn btn-primary btn-lg">
                                <i class="bi bi-house me-2"></i>
                                Go Home
                            </a>
                            <a href="/events" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-calendar-event me-2"></i>
                                Browse Events
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>